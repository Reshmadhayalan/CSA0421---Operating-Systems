#include <stdio.h>

int main() {
    int n;
    printf("Enter number of processes: ");
    scanf("%d", &n);

    int burst[n], pri[n], wait[n], tat[n], p[n];

    for(int i = 0; i < n; i++) {
        p[i] = i + 1;
        printf("Enter burst time for process P%d: ", i + 1);
        scanf("%d", &burst[i]);
        printf("Enter priority for process P%d: ", i + 1);
        scanf("%d", &pri[i]);
    }

    // Sort by priority (lowest = highest priority)
    for(int i = 0; i < n - 1; i++) {
        for(int j = i + 1; j < n; j++) {
            if(pri[i] > pri[j]) {
                int t = pri[i]; pri[i] = pri[j]; pri[j] = t;
                t = burst[i]; burst[i] = burst[j]; burst[j] = t;
                t = p[i]; p[i] = p[j]; p[j] = t;
            }
        }
    }

    wait[0] = 0;
    for(int i = 1; i < n; i++) {
        wait[i] = 0;
        for(int j = 0; j < i; j++) {
            wait[i] += burst[j];
        }
    }

    for(int i = 0; i < n; i++) {
        tat[i] = wait[i] + burst[i];
    }

    float tw = 0, tt = 0;
    printf("\nProcess\tBurst\tPriority\tWaiting\tTurnaround\n");
    for(int i = 0; i < n; i++) {
        tw += wait[i];
        tt += tat[i];
        printf("P%d\t%d\t%d\t\t%d\t%d\n", p[i], burst[i], pri[i], wait[i], tat[i]);
    }

    printf("\nAverage Waiting Time = %.2f", tw / n);
    printf("\nAverage Turnaround Time = %.2f\n", tt / n);

    return 0;
}
